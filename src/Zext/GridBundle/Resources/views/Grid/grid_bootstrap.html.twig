<div class="panel panel-default">
	<table class="{% block table_class %}table table-hover table-striped table-condensed{% endblock %}">
		{% block table_colgroup %}
		<colgroup>
			{% for col in grid.columns %}
			<col width="{{ col.width }}%" />
			{% endfor %}
		</colgroup>
		{% endblock %}

		{% block table_head %}
			{% if grid.hasHead() %}
			<thead>
				{% for row in grid.head %}
				<tr>
					{% for cell in row %}
					<th>{{ cell.content }}</th>
					{% endfor %}
				</tr>
				{% endfor %}
			</thead>
			{% endif %}
		{% endblock %}

		{% block table_body %}
			{% if grid.hasBody() %}
			<tbody>
				{% for row in grid.body %}
				<tr>
					{% for cell in row %}
					<td>{{ cell.content }}</td>
					{% endfor %}
				</tr>
				{% endfor %}
			</tbody>
			{% endif %}
		{% endblock %}

		{% block table_foot %}
			{% if grid.hasBody() %}
			<tfoot>
				{% for row in grid.foot %}
				<tr>
					{% for cell in row %}
					<td>{{ cell.content }}</td>
					{% endfor %}
				</tr>
				{% endfor %}
			</tfoot>
			{% endif %}
		{% endblock %}
	</table>
</div>
